<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:layout_marginTop="@dimen/app_margin_top">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <Spinner
            android:id="@+id/IceCream"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="32dp"
            android:entries="@array/icecream_flavors"
            android:prompt="@string/pick_flavor"
            android:paddingTop="@dimen/spinner_padding_top"
            android:paddingBottom="@dimen/spinner_padding_bottom"
            android:paddingLeft="@dimen/spinner_padding_left"
            android:paddingRight="@dimen/spinner_padding_right"/>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <Spinner
            android:id="@+id/Spinner2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/spinner_padding_top"
            android:paddingBottom="@dimen/spinner_padding_bottom"
            android:paddingLeft="@dimen/spinner_padding_left"
            android:paddingRight="@dimen/spinner_padding_right"/>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <Button
            android:id="@+id/Submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Submit" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/FlavorText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </TableRow>
</TableLayout>